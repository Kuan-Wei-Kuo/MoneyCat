<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:gravity="center"
            android:text="+"
            android:textSize="25dp"
            android:textColor="@color/Grey_50"/>

        <TextView
            android:id="@+id/minusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:gravity="center"
            android:text="-"
            android:textSize="25dp"
            android:textColor="@color/Grey_50"/>

        <TextView
            android:id="@+id/times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:gravity="center"
            android:text="ร"
            android:textSize="25dp"
            android:textColor="@color/Grey_50"/>

        <TextView
            android:id="@+id/dividedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:gravity="center"
            android:text="รท"
            android:textSize="25dp"
            android:textColor="@color/Grey_50"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="4"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="7"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/pointText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="."
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="2"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="8"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="3"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/num_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="9"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/clearText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="C"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/clearAllText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="AC"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>

            <TextView
                android:id="@+id/okText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:text="OK"
                android:textSize="25dp"
                android:textColor="@color/Grey_50"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>